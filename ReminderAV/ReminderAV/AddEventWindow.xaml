<Window x:Class="ReminderAV.AddEventWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReminderAV"
        mc:Ignorable="d"
        Title="AddEventWindow" MinHeight="300" Height="300" Width="300" MinWidth="300">
    <Grid>
        <StackPanel>
            <StackPanel Orientation="Horizontal" Height="30">
                <Button Content="Back" Width="150" Click="Button_Click_1"/>
                <Button Content="Add event" Width="150" Click="Button_Click"/>
            </StackPanel>
            <DatePicker Name="EventDatePick" Height="30"/>
            <TextBox Name="EventTitleText" Height="30" Text="Event title here" VerticalContentAlignment="Center" Padding="0" MaxLength="30" MaxLines="1" />
            <TextBox Name="EventDescText" Height="150" Text="Event description here" />
        </StackPanel>
    </Grid>
</Window>
